<form action="/imageUpload" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8"><input class="form-control input-md" type="file" name="imgUploader" id="imgUploader" placeholder="Photo" required="required" /></div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <p>{{{captcha}}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8"><input class="btn btn-primary" type="submit" value="Save Photo" /></div>
    </div>
</form>
